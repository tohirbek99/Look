@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}






<div class="table-title">
    <div class="row">
        <div class="col-sm-6">
            <h1>Products</h1>
        </div>
        <div class="col-sm-6">
            <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Products</span></a>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>Price</th>
            <th>Category</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>

                <td>
                    @item.Price.ToString("C2")
                </td>

                <td>
                    @item.Category.CategoryName
                </td>

                <td>
                    <img src="/images/image/@item.Image"  width="100" height="100" />
                </td>
                <td class="col-md-2">

                        <a asp-action="Edit" asp-route-id="@item.ProductId"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                        <a asp-action="Details" asp-route-id="@item.ProductId"><i class="material-icons">&#xE417;</i></a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="confirm"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                </td> 
            </tr>
        }
    </tbody>
</table>

<div class="d-flex w-100 justify-content-end">
    <pagination page-count="@ViewBag.TotalPages"
                page-target="/Admin/@ViewBag.CategorySlug"
                page-number="@ViewBag.PageNumber"
                page-range="@ViewBag.PageRange">
    </pagination>
    <a></a>
</div>

